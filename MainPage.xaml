<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="JM_RecargaMovil.MainPage">

    <VerticalStackLayout
        VerticalOptions="Center">
        <Label Text="Ingrese el nu,mero de telefono"/>
        <Entry Placeholder="numero" />
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <VerticalStackLayout Grid.Column="1">
                <Picker
                Title="Selecione el operador:"
                TextColor="Black"
                SelectedIndexChanged="Picker_SelectedIndexChanged">
                    <Picker.Items>
                        <x:String>Movistar</x:String>
                        <x:String>Claro</x:String>
                        <x:String>Tuenti</x:String>
                    </Picker.Items>
                </Picker>
            </VerticalStackLayout>
            <VerticalStackLayout Grid.Column="2" Margin="0 0 0 175">
                <Label Text="Selecione el valor de la recarga:"/>
                
            </VerticalStackLayout>
            
        </Grid>
    </VerticalStackLayout>
</ContentPage>
